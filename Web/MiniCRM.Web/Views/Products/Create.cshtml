@model MiniCRM.Web.ViewModels.Products.ProductCreateModel
@{
    this.ViewData["Title"] = "Add new product";

}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-8 col-md-9 ">
            <div class="card border-0 shadow-lg my-1">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Add new product</h1>
                                </div>
                                <form  asp-action="Create" method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <input asp-for="Name" placeholder="Product name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <textarea asp-for="Description" class="form-control" placeholder="Please descripe your product" rows="3"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Price" class="form-control " placeholder="Price">
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Quantity" class="form-control " placeholder="Product's quantity">
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label id="inputGroupFileAddon01">Product Picture(optional):</label>
                                        <div class="custom-file form-group rounded-pill">
                                            <input type="file" accept="image/*" asp-for="ProductPicture" class="custom-file-input rounded-pill" id="inputGroupFile01"
                                                   aria-describedby="inputGroupFileAddon01">
                                            <label class="custom-file-label rounded-pill" for="inputGroupFile01">Choose image</label>
                                            <span asp-validation-for="ProductPicture" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-primary btn-block">
                                        Add Product
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>