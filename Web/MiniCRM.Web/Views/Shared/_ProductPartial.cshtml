@model MiniCRM.Web.ViewModels.Products.ProductViewModel



<div class="card">
    <img class="card-img justify-content-center" src="@Model.ProductPictureUrl" alt="Vans">
    <div class="card-img-overlay d-flex justify-content-end">
        @if (this.User.IsInRole("Owner") || this.User.IsInRole("Administrator"))
        {

            <div class="d-flex justify-content-end user">
                <ul class="list-inline">
                    <li class="list-inline-item">
                        <a asp-area="" asp-action="Edit" asp-controller="Products" asp-route-id="@Model.Id" class="card-link text-danger">
                            <i class="fas fa-pen" title="Edit this product"></i>
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <form method="post" asp-area="" asp-action="Delete" asp-controller="Products" asp-route-id="@Model.Id">
                            <button type="submit" class="btn btn-danger btn-circle btn-sm">  <i class="fas fa-trash" title="Delete product"></i></button>
                        </form>
                    </li>
                </ul>
            </div>

        }
    </div>

    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text">
            @Model.Description
        </p>
        @if (this.User.IsInRole("Owner"))
        {
            <h6 class="card-subtitle mb-2 text-muted">Quantity in storage: <b>@Model.Quantity</b></h6>
        }
        <div class="buy d-flex justify-content-between align-items-center">
            <div class="text-success"><h5 class="mt-4">@Model.Price.ToString("C")</h5></div>
        </div>
    </div>
</div>