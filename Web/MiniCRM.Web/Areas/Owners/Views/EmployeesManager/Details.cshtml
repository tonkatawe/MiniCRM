@model MiniCRM.Web.ViewModels.Employees.DetailsEmployerViewModel
@{
    this.ViewData["Title"] = $"Details about {@Model.FullName}";

}

<div class="container">
    <div class="card  border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <div>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>

            </div>

            <div class="d-flex justify-content-end user">
                <ul class="list-inline">
                    <li class="list-inline-item">
                        <a asp-area="Owners" asp-controller="EmployeesManager" asp-action="Edit" asp-route-employerId="@Model.Id" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit" title="Edit employer"></i>
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <form method="post" asp-area="Owners" asp-controller="EmployeesManager" asp-action="Delete" id="deleteForm" asp-route-id="@Model.Id">
                        </form>
                        <button class="btn btn-danger  btn-sm" data-toggle="modal" data-target="#deleteModal">  <i class="fas fa-trash" title="Delete employer"></i></button>
                    </li>
                </ul>
            </div>
            <div class="row">
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="font-italic font-weight-bold">
                            <h1 class="h4  mb-4"><i class="fas fa-user"></i>@Model.FullName</h1>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-4 mb-1 mb-sm-0 font-weight-bold">
                                <label>First Name:</label>
                            </div>
                            <div class="col-sm-8 font-italic">
                                <p> @Model.FirstName</p>
                            </div>
                            <div class="col-sm-4 mb-1 mb-sm-0 font-weight-bold">
                                <label>Middle Name:</label>
                            </div>
                            <div class="col-sm-8 font-italic">
                                <p> @Model.MiddleName</p>
                            </div>
                            <div class="col-sm-4 mb-1 mb-sm-0 font-weight-bold">
                                <label>Last Name:</label>
                            </div>
                            <div class="col-sm-8 font-italic">
                                <p> @Model.LastName</p>
                            </div>
                            <div class="col-sm-4 mb-1 mb-sm-0 font-weight-bold">
                                <label>

                                    <p>Email</p>

                                </label>
                            </div>
                            <div class="col-sm-8 font-italic">


                                @Model.Email

                            </div>
                            <div class="col-sm-4 mb-1 mb-sm-0 font-weight-bold">
                                <label>


                                    <p>PhoneNumberNumber</p>

                                </label>
                            </div>
                            <div class="col-sm-8 font-italic">


                                @Model.PhoneNumber

                            </div>
                            <div class="col-sm-4 mb-1 mb-sm-0 font-weight-bold">
                                <label>Job Title:</label>
                            </div>
                            <div class="col-sm-8 font-italic">
                                <p> @Model.JobTitleName</p>
                            </div>
                            <div class="col-sm-4 mb-1 mb-sm-0 font-weight-bold">
                                <label>Address:</label>
                            </div>
                            <div class="col-sm-8 font-italic">
                                <p> @Model.AddressCountry, @Model.AddressCity, @Model.AddressStreet, @Model.AddressZipCode </p>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 mb-4"><i class="fas fa-fw fa-chart-area"></i>Statistic</h1>
                        </div>
                    </div>
                </div>
                <hr />
                <p>AccountStatus</p>
                <ul class="list-inline">
                    @if (Model.HasAccount)
                    {
                        <li class="list-inline-item">

                            <form method="post" asp-area="Owners" asp-controller="EmployeesManager" asp-action="DeleteAccount" id="deleteAccountForm" asp-route-id="@Model.Id" asp-route-accountId="@Model.AccountId">
                                <button class="btn btn-danger  btn-sm" data-toggle="modal" data-target="#deleteAccountModal">  <i class="fas fa-trash" title="Delete customer"></i>Close account</button>
                            </form>
                        </li>

                    }
                    else
                    {
                        <li class="list-inline-item">
                            <form method="post" asp-area="Owners" asp-controller="EmployeesManager" asp-action="CreateAccount" asp-route-id="@Model.Id">
                                <button class="btn btn-danger  btn-sm"> Create Account</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center ">



    <a asp-area="Owners" asp-action="Index" asp-controller="EmployeesManager" class="btn btn-primary rounded-pill btn-sm">
        <span class="icon text-white-50">
            <i class="far fa-arrow-alt-circle-left"></i>
        </span>
        <span class="text">Back to employees</span>
    </a>


</div>

<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-lg-start">
                <h4 class="modal-title " id="myModalLabel">Delete Confirmation</h4>
            </div>
            <div class="modal-body font-weight-bold">
                <p>Do you want to delete "@Model.FullName"?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn bg-danger mr-1 text-white" onclick="deleteForm.submit()">Delete</button>
                <button type="button" class="btn btn-dark " data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div class="modal" tabindex="-1" role="dialog" id="deleteAccountModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-lg-start">
                <h4 class="modal-title " id="myModalAccountLabel">Delete Confirmation</h4>
            </div>
            <div class="modal-body font-weight-bold">
                <p>Do you want to delete "@Model.FullName" account's?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn bg-danger mr-1 text-white" onclick="deleteAccountForm.submit()">Delete</button>
                <button type="button" class="btn btn-dark " data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>