@model MiniCRM.Web.ViewModels.Companies.CompanyCreateModel

@{
    this.ViewData["Title"] = "Join your company";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-8 col-md-9 ">
            <div class="card border-0 shadow-lg my-1">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4  mb-4">Join your company</h1>
                                </div>
                                <form asp-area="Owners" asp-controller="Companies" asp-action="Create" method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <input asp-for="Name" class="form-control" placeholder="Company's name"/>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="IndustryName" class="form-control" placeholder="Industry type"/>
                                        <span asp-validation-for="IndustryName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Company's description"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                    <div class="row d-flex justify-content-center font-weight-bold">
                                        <div class="form-control">
                                            <input asp-for="IsPublic" type="radio" value="true" class="custom-radio"/>
                                            <label class="custom-radio">Public company</label>
                                        </div>
                                        <div class="form-control">
                                            <input asp-for="IsPublic" type="radio" value="false"/>
                                            <label class="custom-radio">Non public company</label>
                                        </div>
                                        <span asp-validation-for="IsPublic" class="text-danger"></span>
                                    </div>
                                    <div class="text-center">
                                        <h1 class="h4 mb-4">Address</h1>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Country" class="form-control" placeholder="Country"/>
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="City" class="form-control" placeholder="City"/>
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Street" class="form-control" placeholder="Street"/>
                                        <span asp-validation-for="Street" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="ZipCode" class="form-control" placeholder="Zip code"/>
                                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                                    </div>
                                    <input asp-for="UserId" type="hidden"/>

                                    <button type="submit" class="btn btn-primary btn-block">
                                        Join your company
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

